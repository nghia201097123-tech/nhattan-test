# Food Channel System - Environment Configuration Template
# Copy this file to .env and fill in the values
# IMPORTANT: Never commit .env files with real credentials to version control

# =============================================================================
# Application Configuration
# =============================================================================
CONFIG_ENV_MODE=local
CONFIG_LOGGER_LEVEL=log,error,warn
SERVICE_PORT=3000
GRPC_SERVICE_PORT=50051

# =============================================================================
# Database Configuration (MariaDB/MySQL)
# =============================================================================
CONFIG_MYSQL_HOST=localhost
CONFIG_MYSQL_PORT=3306
CONFIG_MYSQL_USERNAME=your_username
CONFIG_MYSQL_PASSWORD=your_secure_password
CONFIG_MYSQL_DATABASE=your_database

# =============================================================================
# MongoDB Configuration
# =============================================================================
CONFIG_MONGO_HOST=localhost
CONFIG_MONGO_PORT=27017
CONFIG_MONGO_USERNAME=your_mongo_username
CONFIG_MONGO_PASSWORD=your_secure_mongo_password
CONFIG_MONGO_DB_NAME=your_mongo_database

# =============================================================================
# Redis Configuration
# =============================================================================
CONFIG_REDIS_HOST=localhost
CONFIG_REDIS_PORT=6379
CONFIG_REDIS_PASSWORD=your_secure_redis_password

# =============================================================================
# Kafka Configuration (Optional)
# =============================================================================
CONFIG_KAFKA_HOST=localhost
CONFIG_KAFKA_PORT=9092
CONFIG_KAFKA_GROUP_ID=food-channel-group

# =============================================================================
# gRPC Configuration
# =============================================================================
CONFIG_GRPC_NODEJS_FOOD_CHANNEL_PROCESSOR_HOST=localhost
CONFIG_GRPC_NODEJS_FOOD_CHANNEL_PROCESSOR_PORT=50052
CONFIG_GRPC_NODEJS_FOOD_CHANNEL_VALIDATOR_HOST=localhost
CONFIG_GRPC_NODEJS_FOOD_CHANNEL_VALIDATOR_PORT=50053

# =============================================================================
# Queue Configuration
# =============================================================================
CONFIG_QUEUE_GROUP_REDIS_SYNC_CHANNEL_ORDER_SHOPEEFOOD=queue-sync-shopee-food
CONFIG_QUEUE_GROUP_REDIS_SYNC_CHANNEL_ORDER_GRABFOOD=queue-sync-grab-food
CONFIG_QUEUE_GROUP_REDIS_SYNC_CHANNEL_ORDER_BEFOOD=queue-sync-be-food
CONFIG_QUEUE_GROUP_REDIS_SYNC_CHANNEL_ORDER_CNVL=queue-sync-cnvl
CONFIG_QUEUE_JOB_CONCURRENCY_QUANTITY=4
CONFIG_CPU_COUNT=1

# =============================================================================
# Build Information
# =============================================================================
BUILD_NUMBER=1.0.0
BUILD_TIME=2024-01-01T00:00:00Z
